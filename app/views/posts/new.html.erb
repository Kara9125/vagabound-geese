<div class="col-sm-4 col-sm-offset-4">
 <legend>Write a new post!</legend>
 <%= form_for @post do |f| %>
   <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: name %>
   <% end %>

   <!-- or not -->
   <%= f.label :title %>:
   <%= f.text_field :title, class:"form-control", required: true %><br />

   <%= f.label :city %>:
   <%= f.text_field :city_id, class:"form-control", required: true %><br />

   <%= f.label :content %>:
   <%= f.text_area :content, size: "24x6", class:"form-control",required: true %><br />

   <%= f.submit "Save Post", class:"btn btn-primary" %>
 <% end %>
</div>
